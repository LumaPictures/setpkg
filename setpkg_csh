

# core commands
#setenv PATH ${PATH}:`dirname $SETPKG_PATH`/bin
set bin = `dirname $SETPKG_PATH`/bin
alias setpkg 'eval `$bin/setpkgcli --pid $$ set $SHELL \!*`'
alias unsetpkg 'eval `$bin/setpkgcli --pid $$ unset $SHELL \!*`'
alias lspkg '$bin/setpkgcli --pid $$ list \!*'
alias pkginfo '$bin/setpkgcli info \!*'
alias runpkg 'setpkg \!*; eval `pkginfo --exe \!*`'

alias addenv 'eval `$bin/setpkgcli env $SHELL prepend \!*`'
alias delenv 'eval `$bin/setpkgcli env $SHELL pop \!*`'

# system aliases
eval `$bin/setpkgcli alias $SHELL`

# completion
set packages = `lspkg --aliases`
set base_packages = `lspkg --base`

complete setpkg  p/1/\$packages/ n/-rehash/\$packages/
complete unsetpkg  p/1/\$base_packages/
